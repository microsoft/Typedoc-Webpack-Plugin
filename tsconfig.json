{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2016",
    "lib": ["es2015", "es6"],
    "outDir": "dist",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": false,
    "declaration": true
  },
  "include": [
    "node_modules/*",
    "index.ts"
  ],
  "exclude": [
    "dist"
  ]
}

